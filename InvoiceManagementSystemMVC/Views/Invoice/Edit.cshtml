@model InvoiceManagementSystemMVC.Entities.Bill

<h2>Edit Bill</h2>

<form asp-action="Edit" method="post">

    <!-- Kullanıcı ID'sini taşımak için gizli input -->
    <input type="hidden" asp-for="BillId" />

    <div class="form-group">
        <label asp-for="BillType"></label>
        <input asp-for="BillType" class="form-control" />
        <span asp-validation-for="BillType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BillPayment"></label>
        <input asp-for="BillPayment" class="form-control" />
        <span asp-validation-for="BillPayment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ApartmentId"></label>
        <input asp-for="ApartmentId" class="form-control" />
        <span asp-validation-for="ApartmentId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" class="form-control" />
        <span asp-validation-for="DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Geri dön butonu -->
    </div>
</form>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}